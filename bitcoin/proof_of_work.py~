################################
# Bitcoin
################################

################################
# Activity 1 - Proof of work
################################

p = 15486869

from time import *

def verification(x, y):
    xsquare = (x**2) % p
    if xsquare == y:
        return True
    else:
        return False

# Test
print("--- Verification x^2 = y modulo p ---")

start_chrono = time()

x = 6543210
y = 8371779
print(verification(x, y))

end_chrono = time()
total_chrono = end_chrono - start_chrono
print("Time of computation (in seconds):", total_chrono)
